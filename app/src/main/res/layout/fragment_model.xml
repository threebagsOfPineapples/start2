<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <android.support.design.widget.TabLayout
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:id="@+id/fragment_model_tablayout"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="60dp"></android.support.design.widget.TabLayout>

        <RelativeLayout
            android:id="@+id/fragment_model_rl_add_model"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:id="@+id/fragment_model_tv_add_model"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:text="@string/add_model"
                android:layout_height="match_parent" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_add"
                android:layout_centerVertical="true"
                android:layout_marginEnd="3dp"
                android:layout_toStartOf="@+id/fragment_model_tv_add_model"
                android:id="@+id/imageView4" />
        </RelativeLayout>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/fragment_model_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>
</LinearLayout>