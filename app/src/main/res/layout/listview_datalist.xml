<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:background="@drawable/border_black_arc_180"
        android:id="@+id/datalist_number"
        android:gravity="center"
        android:text="cesiyixia "
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="44" />

    <TextView
        android:id="@+id/datalist_name"
        android:layout_marginStart="@dimen/dp_12"
        android:gravity="center_vertical"
        android:text="cesiyixia "
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="220" />

    <TextView
        android:id="@+id/datalist_date"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="111" />

    <LinearLayout
        android:id="@+id/ll_delete"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="111">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>